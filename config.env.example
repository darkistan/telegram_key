# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_ID=your_telegram_user_id_here
# Пін-код для запитів на доступ (запобігає спаму)
ACCESS_PIN=your_secure_pin_here

# KeePass Database Configuration
# Шлях до файлу бази даних KeePass (може бути відносним або абсолютним)
KEEPASS_DB_PATH=Database.kdbx
# Пароль для відкриття бази даних KeePass
KEEPASS_PASSWORD=your_keepass_password_here
# Шлях до ключового файлу (залиште порожнім, якщо не використовується)
KEEPASS_KEY_FILE=

# Email 2FA Configuration
ADMIN_EMAIL=your_admin_email@example.com
SMTP_SERVER=your_smtp_server.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# KeePass Reconnection Configuration
# Інтервал перепідключення до бази даних (в секундах)
# 300 = 5 хвилин, 600 = 10 хвилин, 1800 = 30 хвилин
KEEPASS_RECONNECT_INTERVAL=300

# Rate Limiting Configuration
# Максимальна кількість спроб пін-коду
MAX_PIN_ATTEMPTS=5
# Максимальна кількість спроб 2FA коду
MAX_2FA_ATTEMPTS=3
# Максимальна кількість запитів на хвилину
MAX_REQUESTS_PER_MINUTE=10
# Час блокування пін-коду (секунди)
PIN_LOCKOUT_DURATION=300
# Час блокування 2FA (секунди)
2FA_LOCKOUT_DURATION=180
